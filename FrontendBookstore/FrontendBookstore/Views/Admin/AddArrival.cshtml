@{
    ViewData["Title"] = "Add New Arrival";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-box-open me-2"></i>Add New Arrival</h2>
        <a asp-action="Arrival" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Arrivals
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="arrivalBook" class="form-label fw-bold">Select Book</label>
                            <select class="form-select" id="arrivalBook" required>
                                <option value="">Select book</option>
                                <option value="1">The Great Novel</option>
                                <option value="2">Science Encyclopedia</option>
                                <option value="3">History of the World</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="arrivalQuantity" class="form-label fw-bold">Quantity</label>
                            <input type="number" class="form-control" id="arrivalQuantity" placeholder="Enter quantity" required>
                        </div>

                        <div class="mb-3">
                            <label for="arrivalDate" class="form-label fw-bold">Arrival Date</label>
                            <input type="date" class="form-control" id="arrivalDate" required>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="arrivalSupplier" class="form-label fw-bold">Supplier</label>
                            <input type="text" class="form-control" id="arrivalSupplier" placeholder="Enter supplier name" required>
                        </div>

                        <div class="mb-3">
                            <label for="arrivalCost" class="form-label fw-bold">Total Cost ($)</label>
                            <input type="number" step="0.01" class="form-control" id="arrivalCost" placeholder="Enter total cost" required>
                        </div>

                        <div class="mb-3">
                            <label for="arrivalCondition" class="form-label fw-bold">Condition</label>
                            <select class="form-select" id="arrivalCondition" required>
                                <option value="new">New</option>
                                <option value="used">Used - Like New</option>
                                <option value="refurbished">Refurbished</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="arrivalNotes" class="form-label fw-bold">Notes</label>
                    <textarea class="form-control" id="arrivalNotes" rows="3" placeholder="Any additional notes"></textarea>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="reset" class="btn btn-outline-danger me-md-2">
                        <i class="fas fa-times me-2"></i>Reset
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Arrival
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>