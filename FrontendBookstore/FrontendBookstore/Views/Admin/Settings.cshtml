@{
    ViewData["Title"] = "Admin Settings";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="mb-4"><i class="fas fa-cog me-2"></i>Admin Settings</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-key me-2"></i>Change Password</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">Current Password</label>
                        <input type="password" class="form-control" id="currentPassword" required>
                    </div>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">New Password</label>
                        <input type="password" class="form-control" id="newPassword" required>
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm New Password</label>
                        <input type="password" class="form-control" id="confirmPassword" required>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Update Password
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i>Admin Profile</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="adminName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="adminName" value="Admin User">
                    </div>
                    <div class="mb-3">
                        <label for="adminEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="adminEmail" value="admin@bookify.com">
                    </div>
                    <div class="mb-3">
                        <label for="adminAvatar" class="form-label">Profile Picture</label>
                        <input type="file" class="form-control" id="adminAvatar">
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Update Profile
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm border-danger">
    <div class="card-header bg-light text-danger">
        <h5 class="mb-0"><i class="fas fa-sign-out-alt me-2"></i>Logout</h5>
    </div>
    <div class="card-body">
        <p>Click the button below to securely logout from the admin panel.</p>
        <a asp-controller="Home" asp-action="Login" class="btn btn-danger">
            <i class="fas fa-sign-out-alt me-2"></i>Logout
        </a>
    </div>
</div>