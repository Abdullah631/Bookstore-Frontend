@{
    ViewData["Title"] = "Add New Blog";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-blog me-2"></i>Add New Blog Post</h2>
        <a asp-action="Blogs" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Blogs
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form>
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="blogTitle" class="form-label fw-bold">Blog Title</label>
                            <input type="text" class="form-control" id="blogTitle" placeholder="Enter blog title" required>
                        </div>

                        <div class="mb-3">
                            <label for="blogAuthor" class="form-label fw-bold">Author</label>
                            <input type="text" class="form-control" id="blogAuthor" placeholder="Enter author name" required>
                        </div>

                        <div class="mb-3">
                            <label for="blogDescription" class="form-label fw-bold">Short Description</label>
                            <textarea class="form-control" id="blogDescription" rows="3" placeholder="Enter short description" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="blogContent" class="form-label fw-bold">Content</label>
                            <textarea class="form-control" id="blogContent" rows="10" placeholder="Write your blog content here" required></textarea>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="blogImage" class="form-label fw-bold">Featured Image</label>
                            <input type="file" class="form-control" id="blogImage" accept="image/*">
                            <div class="mt-2 text-center">
                                <img id="blogImagePreview" src="~/image/default-blog.png" class="img-thumbnail" style="max-height: 200px; display: none;">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="blogCategory" class="form-label fw-bold">Category</label>
                            <select class="form-select" id="blogCategory" required>
                                <option value="">Select category</option>
                                <option value="reviews">Book Reviews</option>
                                <option value="news">Literary News</option>
                                <option value="guides">Reading Guides</option>
                                <option value="interviews">Author Interviews</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="blogTags" class="form-label fw-bold">Tags</label>
                            <input type="text" class="form-control" id="blogTags" placeholder="Enter tags separated by commas">
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="blogFeatured">
                            <label class="form-check-label" for="blogFeatured">Feature this post</label>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="reset" class="btn btn-outline-danger me-md-2">
                        <i class="fas fa-times me-2"></i>Reset
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Publish Blog
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('blogImage').addEventListener('change', function(e) {
            const preview = document.getElementById('blogImagePreview');
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}