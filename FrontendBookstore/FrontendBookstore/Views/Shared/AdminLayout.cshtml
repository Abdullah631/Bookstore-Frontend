<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/image/book.png" type="image/png">
    <title>@ViewData["Title"] - Bookify Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/admin.css")">
    @RenderSection("Styles", required: false)
</head>
<body class="admin-body">
    <div class="admin-container">
        <div class="sidebar bg-dark text-white">
            <div class="sidebar-header p-3 border-bottom">
                <a asp-controller="Admin" asp-action="Index" class="d-flex align-items-center text-white text-decoration-none">
                    <i class="fas fa-book me-2"></i>
                    <span class="fs-5 fw-bold">Bookify Admin</span>
                </a>
            </div>
            <ul class="nav flex-column p-2">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Books">
                        <i class="fas fa-book me-2"></i> Books
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Arrivals">
                        <i class="fas fa-box-open me-2"></i> Arrivals
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Orders">
                        <i class="fas fa-shopping-cart me-2"></i> Orders
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="ManageBlogs">
                        <i class="fas fa-blog me-2"></i>Blogs
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Settings">
                        <i class="fas fa-cog me-2"></i> Settings
                    </a>
                </li>
            </ul>
        </div>

        <div class="main-content">
            <nav class="navbar navbar-expand navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-sm btn-outline-secondary me-2" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="flex-grow-1"></div>

                    <div class="d-flex ms-auto align-items-center">
                        <div class="dropdown">
                            <a href="#" class="d-block text-decoration-none dropdown-toggle" id="dropdownUser"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/image/admin-avatar.jpg" alt="Admin" width="32" height="32" class="rounded-circle me-2">
                                <span class="fw-bold">Admin</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownUser">
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Settings"><i class="fas fa-cog me-2"></i> Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Login", "Home")"><i class="fas fa-sign-out-alt me-2"></i> Sign out</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/js/admin.js")"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>