@{
    ViewData["Title"] = "Checkout";
}

<section class="checkout py-5">
    <div class="container">
        <h2 class="text-center mb-5"><span class="border-bottom border-3 border-primary pb-2">Complete Your Order</span></h2>

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h4 class="mb-4"><i class="fas fa-truck me-2"></i>Delivery Information</h4>

                        <form>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="firstName" class="form-label">First Name</label>
                                    <input type="text" class="form-control" id="firstName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="lastName" class="form-label">Last Name</label>
                                    <input type="text" class="form-control" id="lastName" required>
                                </div>
                                <div class="col-12">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                                <div class="col-12">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" id="phone" required>
                                </div>
                                <div class="col-12">
                                    <label for="address" class="form-label">Full Address</label>
                                    <textarea class="form-control" id="address" rows="3" required></textarea>
                                </div>
                                <div class="col-md-4">
                                    <label for="city" class="form-label">City</label>
                                    <input type="text" class="form-control" id="city" required>
                                </div>
                                <div class="col-md-4">
                                    <label for="state" class="form-label">State/Province</label>
                                    <input type="text" class="form-control" id="state" required>
                                </div>
                                <div class="col-md-4">
                                    <label for="zipCode" class="form-label">ZIP/Postal Code</label>
                                    <input type="text" class="form-control" id="zipCode" required>
                                </div>
                                <div class="col-12">
                                    <label for="notes" class="form-label">Delivery Notes (Optional)</label>
                                    <textarea class="form-control" id="notes" rows="2" placeholder="Any special instructions for delivery?"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h4 class="mb-4"><i class="fas fa-receipt me-2"></i>Order Summary</h4>

                        <div class="border-bottom pb-3 mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <div>
                                    <h6 class="mb-0">The Silent Patient</h6>
                                    <small class="text-muted">Qty: 1</small>
                                </div>
                                <span>£12.99</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="mb-0">Where the Crawdads Sing</h6>
                                    <small class="text-muted">Qty: 2</small>
                                </div>
                                <span>£25.98</span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal</span>
                                <span>£38.97</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Shipping</span>
                                <span>£2.99</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tax</span>
                                <span>£3.50</span>
                            </div>
                            <div class="d-flex justify-content-between border-top pt-2">
                                <h5>Total</h5>
                                <h5>£45.46</h5>
                            </div>
                        </div>

                        <div class="alert alert-info mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-money-bill-wave me-3 fs-4"></i>
                                <div>
                                    <h6 class="mb-1">Cash on Delivery</h6>
                                    <small class="text-muted">Pay when you receive your order</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="terms" required>
                            <label class="form-check-label" for="terms">
                                I agree to the <a href="@Url.Action("Privacy", "Home")" class="text-decoration-none">Terms and Conditions</a>
                            </label>
                        </div>

                        <button class="btn btn-primary w-100 py-2" type="button" data-bs-toggle="modal" data-bs-target="#orderSuccessModal">
                            <i class="fas fa-check-circle me-2"></i>Place Order
                        </button>

                        <div class="text-center mt-3">
                            <a href="@Url.Action("Cart", "Home")" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>Back to Cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="orderSuccessModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h3 class="mb-3">Order Placed Successfully!</h3>
                    <p class="mb-4">Thank you for your purchase. Your order has been received and will be processed shortly.</p>
                    <a href="@Url.Action("Categories", "Home")" class="btn btn-primary px-4">
                        <i class="fas fa-book me-2"></i>Browse More Books
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .checkout .form-label {
            font-weight: 500;
        }

        .checkout .alert-info {
            background-color: #f0f9ff;
            border-color: #b6e0fe;
        }
    </style>
}